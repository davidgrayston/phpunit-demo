<?xml version="1.0" encoding="utf-8"?>
<phpunit
    colors="true"
    bootstrap="vendor/autoload.php"
    >
  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">src</directory>
    </whitelist>
  </filter>
  <testsuites>
    <testsuite name="Test Suite">
      <directory>tests/</directory>
    </testsuite>
  </testsuites>
</phpunit>
